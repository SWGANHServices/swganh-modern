# SWG:ANH Modern Development Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_DB=swganh_dev
POSTGRES_USER=swganh
POSTGRES_PASSWORD=devpassword
DATABASE_URL=postgresql://swganh:devpassword@postgres:5432/swganh_dev

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Server Configuration
DEBUG_MODE=1
LOG_LEVEL=DEBUG
PLUGIN_AUTO_RELOAD=1
HOT_RELOAD_SCRIPTS=1
ENABLE_PROFILING=1

# Network Configuration
LOGIN_SERVER_PORT=44453
ZONE_SERVER_PORT=44463
API_SERVER_PORT=8080
METRICS_PORT=9090

# Security Settings (Development Only)
JWT_SECRET=dev-secret-key-change-in-production
ENCRYPTION_KEY=dev-encryption-key-32-chars!!

# Feature Flags
ENABLE_ADMIN_COMMANDS=1
ENABLE_DEBUG_LOGGING=1
ENABLE_PERFORMANCE_METRICS=1
ENABLE_UNIT_TESTS=1

# Client Configuration
SWG_CLIENT_VERSION=20031211-18:00
REQUIRED_CLIENT_BUILD=14.1.0

# Development Tools
ENABLE_HOT_RELOAD=1
ENABLE_AUTO_RESTART=1
ENABLE_LIVE_PROFILING=1